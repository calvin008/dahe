.modal-box {
  position: fixed;
  left: 50%;
  top: 50%;
  margin: auto;
  background: #fff;
  z-index: 1000;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  box-sizing: border-box;
  visibility: hidden;
}
.modal-scale {
  transform: translate(-50%, -50%) scale(0);
}
.modal-normal {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
  visibility: visible;
}
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  visibility: hidden;
}
.mask-show {
  visibility: visible;
  opacity: 1;
}
.modal-title {
  text-align: center;
  font-size: 34rpx;
  color: #333;
  padding-top: 20rpx;
  font-weight: bold;
}
.modal-content {
